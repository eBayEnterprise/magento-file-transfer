<?xml version="1.0"?>
<!--
/**
 * Module configuration
 *
 * @author TrueAction
 */
-->
<config>
	<modules>
		<TrueAction_ActiveConfig>
			<version>0.1.0</version>
		</TrueAction_ActiveConfig>
	</modules>
	<global>
		<blocks>
			<activeconfig>
				<class>TrueAction_ActiveConfig_Block</class>
			</activeconfig>
		</blocks>
		<models>
			<activeconfig>
				<class>TrueAction_ActiveConfig_Model</class>
			</activeconfig>
		</models>
		<events>
			<adminhtml_init_system_config>
				<observers>
					<config_imports_observer>
						<type>singleton</type>
						<class>TrueAction_ActiveConfig_Model_Observer</class>
						<method>processConfigImports</method>
					</config_imports_observer>
				</observers>
			</adminhtml_init_system_config>
		</events>
	</global>
	<phpunit>
		<suite>
			<modules>
				<TrueAction_ActiveConfig />
			</modules>
		</suite>
	</phpunit>
</config>
